{
  "name": "cnc-ai-optimizer",
  "version": "1.0.0",
  "description": "CNC AI 優化平台",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "clean": "rm -rf dist node_modules package-lock.json",
    "reinstall": "npm run clean && npm install",
    "format": "prettier --write \"src/**/*.{js,vue,css,html}\"",
    "lint": "eslint src --ext .vue,.js,.ts --fix",
    "type-check": "vue-tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "dependencies": {
    "vue": "^3.3.4",
    "lucide-vue-next": "^0.263.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.2.3",
    "autoprefixer": "^10.4.14",
    "postcss": "^8.4.24",
    "tailwindcss": "^3.3.2",
    "vite": "^4.4.5"
  }
} 